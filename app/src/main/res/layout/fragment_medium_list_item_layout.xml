<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.news.aggregator.newstard.ui.databinding.AdaptersKt"/>

        <variable
                name="post"
                type="com.news.aggregator.newstard.repositories.medium.MediumPost"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mediumListLayoutPostText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/mediumListPostTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/textForeground"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text='@{post.title}'
                    tools:text="Post Title"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mediumListPostTitle">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/textSecondaryForeground"
                        android:text="@{`Posted By: ` + post.authorName + `, ` }"
                        tools:text="Posted By Author, "/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:textSize="12sp"
                        android:textColor="@color/textSecondaryForeground"
                        app:setTimeAgo="@{post.createdAt}"
                        tools:text="Post Time"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/mediumListLayoutPostText"
                android:gravity="center">

            <ImageView android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:src="@drawable/medium_clap"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:textColor="@color/textForeground"
                      android:textSize="12sp"
                      android:layout_marginTop="2dp"
                      app:setHumanizeNumber="@{post.numberOfComments}"
                      tools:text="12k"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/mediumListLayoutPostText"
                android:background="@color/mediumColor"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
